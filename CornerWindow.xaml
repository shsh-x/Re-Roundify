<Window x:Class="ReRoundify.CornerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True" Focusable="False" IsHitTestVisible="False">
    <Grid>
        <Path x:Name="TopLeftCorner" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Path x:Name="TopRightCorner" Fill="Black" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Path x:Name="BottomLeftCorner" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Path x:Name="BottomRightCorner" Fill="Black" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>